{
  "$schema": "https://www.krakend.io/schema/v2.6/krakend.json",
  "version": 3,
  "timeout": "10000ms",
  "endpoints": [
    {
      "endpoint": "/",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "no-op",
          "method": "GET",
          "host": ["weather-web:3000"]
        }
      ]
    },
    {
      "endpoint": "/{path}",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{path}",
          "encoding": "no-op",
          "method": "GET",
          "host": ["weather-web:3000"]
        }
      ]
    },
    {
      "endpoint": "/api/v1/point-forecast/{lat}/{lon}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/point-forecast?lat={lat}&lon={lon}",
          "method": "GET",
          "host": ["weather-api:3100"]
        }
      ]
    },
    {
      "endpoint": "/api/v1/register",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/register",
          "method": "POST",
          "host": ["weather-api:3100"]
        }
      ]
    },
    {
      "endpoint": "/api/v1/unregister",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/unregister",
          "method": "POST",
          "host": ["weather-api:3100"]
        }
      ]
    },
    {
      "endpoint": "/api/v1/update-position",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/update-position",
          "method": "POST",
          "host": ["weather-api:3100"]
        }
      ]
    }
  ],
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "router": {
      "auto_options": true
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type"
      ],
      "allow_headers": [
        "*"
      ],
      "max_age": "12h",
      "allow_credentials": false,
      "debug": false
    }
  }
}