{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/grib-downloader/Dockerfile",
				"context": "${workspaceFolder}/grib-downloader",
				"pull": true
			},
			"node": {
				"package": "${workspaceFolder}/grib-downloader/package.json"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "development"
				},
				"containerName": "grib-downloader",
				"network": "docker-elk_elk",
				"volumes": [
					{
						"localPath": "/var/lib/docker/volumes/weather-service_grib_data/_data",
						"containerPath": "/app/grib_files"
					}
				]
			},
			"node": {
				"package": "${workspaceFolder}/grib-downloader/package.json",
				"enableDebugging": true
			}
		}
	]
}